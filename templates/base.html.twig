<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Pokemon{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg bg-danger h5">
               <a class="navbar-brand ms-3 me-3" href="{{ path('main_index') }}">
                   <img class="logo" src="{{ asset('assets/img/pokeball.png') }}" alt="pokeball">
                   Pokedex
               </a>
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item"><a class="nav-link" href="{{ path('main_index') }}">Accueil</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('pokemon_add') }}">Capturer un pokémon</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('pokemon_liste') }}">Mon équipe</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <main class="container">
            {% block body %}{% endblock %}
        </main>
        <script src="{{ asset('assets/js/main.js') }}"></script>
        <script src="{{ asset('assets/js/ajout.js') }}"></script>
    </body>
</html>
